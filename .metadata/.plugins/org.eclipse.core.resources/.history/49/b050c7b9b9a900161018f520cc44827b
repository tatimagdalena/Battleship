
public class Game {

	
	
	private static Game game = null;
	
	
	
	
	
	private Game() {
		
	}
	
	public static Game getMainGame() {
		if(game == null) {
			game = new Game();
		}
		return game;
	}
	
	public void initiateGame() {
		WindowFrame f = new WindowFrame(); 
		f.setTitle("Batalha Naval"); 
		f.setVisible(true);
	}
	
	public void showPositioning() {
		
	}
}
